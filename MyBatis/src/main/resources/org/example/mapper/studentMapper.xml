<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.studentMapper">
    <select id="select" parameterType="org.example.bean.student" resultType="org.example.bean.student">
        select *
        from student
        <where>
            <if test="name!=null and name!=''">
                and name=#{name};
            </if>
            <if test="name==null and major!=null">
                and major=#{major};
            </if>
            <if test="name==null and major==null">
                and id is not null;
            </if>
        </where>
    </select>
    <select id="selectM" parameterType="int" resultType="org.example.bean.student">
        select *
        from student
        where id &lt; 5;
    </select>
    <select id="selectMore" parameterType="map" resultType="org.example.bean.student">
        select * from student
             <where>
                <foreach collection="hmap" index="keys" item="value" separator="or">
                     id=#{value}
                </foreach>
             </where>
    </select>
    <insert id="insertMore" parameterType="map">
        insert into student (name,major)values
        <foreach collection="insertmap" index="keys" item="values" separator=",">
        (#{values.name},#{values.major})
        </foreach>
    </insert>
</mapper>